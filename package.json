{
  "name": "tga-image-preview",
  "displayName": "TGA Image Preview",
  "description": "Preview TGA Images",
  "version": "1.0.0",
  "publisher": "lunarwtr",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Visualization"
  ],
  "keywords": [
		"TGA",
		"TARGA",
		"Truevision",
		"Image",
		"Viewer"
	],
  "license": "MIT",
  "repository": {
		"type": "git",
		"url": "https://github.com/lunarwtr/vscode-tga-image-preview.git"
	},
  "icon": "icon.png",
  "activationEvents": [
    "onCustomEditor:tga.previewEditor",
    "onCommand:tga.zoomIn",
    "onCommand:tga.zoomOut"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "tga.previewEditor",
        "displayName": "%customEditors.displayName%",
        "priority": "default",
        "selector": [
          {
            "filenamePattern": "*.{tga}"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "tga.zoomIn",
        "title": "%command.zoomIn%",
        "category": "Image Preview"
      },
      {
        "command": "tga.zoomOut",
        "title": "%command.zoomOut%",
        "category": "Image Preview"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "tga.zoomIn",
          "when": "activeCustomEditorId == 'tga.previewEditor'",
          "group": "1_tga"
        },
        {
          "command": "tga.zoomOut",
          "when": "activeCustomEditorId == 'tga.previewEditor'",
          "group": "1_tga"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/pngjs": "^6.0.1",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "pngjs": "^6.0.0",
    "tga": "^1.0.4",
    "vscode-nls": "^5.0.0"
  }
}
